{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "types": ["node"],
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": ["src/**/*.ts", "src/errorReporter.js"],
    "exclude": ["node_modules"]
}